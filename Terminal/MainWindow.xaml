<Window x:Class="Terminal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Terminal"
        mc:Ignorable="d"
        Title="Office Ware Terminal"
        Height="450"
        Width="800"
        Background="Black"
        >
    <DockPanel>
        <ScrollViewer
            x:Name="terminalWrap"
            DockPanel.Dock="Top"    
        >
            <StackPanel
                x:Name="terminal"
            >
                <TextBox
                    x:Name="input"    
                    DockPanel.Dock="Top"
                    Margin="15, 0, 15, 0"
                    Height="25"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    CaretBrush="Yellow"
                />
                <StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Window>
